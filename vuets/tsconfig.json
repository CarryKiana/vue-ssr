{
    "compilerOptions": {
        "outDir": "./built/", // 重定向输出目录
        "sourceMap": true, // 生成相应的.map文件
        "strict": true, // 启用所有的严格类型检查选项
        "noImplicitReturns": true, // 不是函数的所有返回路径有返回值时报错
        "module": "es2015", // 指定生成哪个模块系统代码
        "moduleResolution": "node", // 决定如何处理模块
        "target": "es5" // 指定ECMAScript目标版本
    },
    "include": [
        "./src/**/*"
    ]
}